<%= simple_form_for [:backend,@user], :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend>Utilisateur</legend>
    
    <%= f.input :email %>
    <%= f.input :password %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary', :value => "Sauver" %>
      <%= link_to 'Annuler', backend_users_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
