<h1>Utilisateur</h1>

<p>
  <b>Nom</b><br>
  <%= @user.first_name.to_s + " " + @user.last_name.to_s %>
</p>

<p>
  <b>Email</b><br>
  <%= @user.email %>
</p>


<div class="form-actions">
  <%= link_to 'Retour', backend_users_path, :class => 'btn'  %>
  <%= link_to 'Editer', edit_backend_user_path(@user), :class => 'btn' %>
  <%= link_to 'Supprimer', backend_user_path(@user), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
