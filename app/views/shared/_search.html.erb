   <h4>Rechercher un évènement</h4>
	<%= form_tag "/events/search", :class => 'well' do |f| %>
	  
	  <div class="control-group">
		<b>Région</b>
		<div class="controls">
	    <%= select_tag "Région", options_for_select(Address::STATES_LIST), :style => "width:100%" %>
	  </div></div>
	  
	  <div class="control-group">
		<b>Mois de l'évènement</b>	
	  <div class="controls">
	  <%= select_tag "Mois", options_for_select(["Indifférent","Janvier","Février","Mars","Avril","Mai","Juin","Juillet","Août","Septembre","Octobre","Novembre","Décembre"]), :style => "width:100%" %>
	  </div></div>
	
	  <div class="control-group">
		<b>Type de salon</b>
		<div class="controls" style="padding-top:5px">
	 <% Tag.typology.each do |t| %>
	     <% if params[:search] != nil %>
	     <p><%= check_box_tag "search[tag_list][]", t.name, params[:search][:tag_list].include?(t.name)  %>
		 <% else %>
		 <p><%= check_box_tag "search[tag_list][]", t.name, false %>
		 <% end %>
	    <%= t.name %></p>
	  <% end %>
	  </div></div>
	  <div class="control-group">
		<b>Thème</b>
		<div class="controls" style="padding-top:5px">
	  <% Tag.theme.each do |t| %>
	    <% if params[:search] != nil %>
	    <p><%= check_box_tag "search[tag_list][]", t.name, params[:search][:tag_list].include?(t.name)  %>
		<% else %>
		<p><%= check_box_tag "search[tag_list][]", t.name, false %>
		<% end %>
	    <%= t.name %></p>
	  <% end %>
	  
	  </div></div>
	  <button type="submit" class="btn">Rechercher</button>
	<% end %>
