<div class="container" style="padding-bottom:10px;padding-top:10px">
<% @events.each do |event| %>
<div class="span3">
<div class="thumbnail" style="padding-top:10px;margin-top:10px;height:420px">
	<% unless event.address.nil? || event.address.latitude.nil? %>
	<%= image_tag "http://maps.googleapis.com/maps/api/staticmap?size=260x180&sensor=false&zoom=5&markers=#{event.address.latitude}%2C#{event.address.longitude}" %>
	<br/>
	<% end %>
	<div class="caption">
		<h5><%= link_to event.name, event_path(event) %></h5>
		<p><%= truncate event.description, :length => 150, :omission => '...' %></p>
		<p><b><%= event.typology_list %></b></p>
		<p><b><%= event.theme_list %></b></p>
	</div>
	<%= link_to 'Voir la fiche', event_path(event), :class => 'btn', :style => "width:90%;postion:relative;left:0px" %>
</div>
</div>
<% end %>
</div>
