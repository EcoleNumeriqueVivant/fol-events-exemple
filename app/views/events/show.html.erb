<div class="form-actions">
  <%= link_to 'Retour', events_path, :class => 'btn'  %>
  <%= link_to 'Editer', edit_event_path(@event), :class => 'btn' %>
  <%= link_to 'Supprimer', event_path(@event), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
