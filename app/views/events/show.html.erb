<h1>Event</h1>

<p>
  <b>Name</b><br>
  <%= @event.name %>
</p>

<p>
  <b>Date</b><br>
  <%= @event.date %>
</p>

<p>
  <b>Description</b><br>
  <%= @event.description %>
</p>

<% unless @event.address.nil? || @event.address.latitude.nil? %>
<strong>Adresse :</strong>
<%= @event.address.line1 %>
<%= @event.address.zip + ' ' + @event.address.city %><br/>
<br />
<%= image_tag "http://maps.googleapis.com/maps/api/staticmap?size=440x290&sensor=false&zoom=16&markers=#{@event.address.latitude}%2C#{@event.address.longitude}" %>
<br/>
<% end %>

<div class="form-actions">
  <%= link_to 'Back', events_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_event_path(@event), :class => 'btn' %>
  <%= link_to 'Delete', event_path(@event), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
