<h1>Evènement</h1>
<p>
  <b>Nom de l'évènement</b><br>
  <%= @event.name %>
</p>

<p>
  <b>Date de la manifestation</b><br>
  <%= @event.begin_date %> - <%= @event.end_date %>
</p>

<p>
  <b>Date limite d'inscription</b><br>
  <%= @event.subscibe_limit_date %>
</p>

<p>
  <b>Thématique</b>
  	<%= @event.theme_list.to_s %>
</p>	

<p>
  <b>Typologie</b>
  	<%= @event.typology_list.to_s %>
</p>	

<p>
  <b>Fréquentation</b>
  	<%= @event.attendance %>
</p>

<p>
  <b>Fonctionnement et Description</b><br>
  <%= raw @event.description %>
</p>

<p>
  <b>Contacts</b><br>
  <%= raw @event.contacts %>
</p>

<p>
  <b>Modalités de participation</b><br>
  <%= raw @event.how_to_participate %>
</p>

<p>
  <b>Tarifs</b><br>
  <%= raw  @event.registration_fees %>
</p>

<p>
  <b>Type de participants</b><br>
  <%= raw  @event.participants %>
</p>

<p>
  <b>Evènements rattachés</b><br>
  <%= raw  @event.related_events %>
</p>

<p>
  <b>Information Supplémentaires</b><br>
  <%= raw  @event.infos_extra %>
</p>


<% unless @event.address.nil? || @event.address.latitude.nil? %>
<strong>Adresse :</strong>
<%= @event.address.line1 %>
<%= @event.address.zip + ' ' + @event.address.city %><br/>

<br />

<%= image_tag "http://maps.googleapis.com/maps/api/staticmap?size=440x290&sensor=false&zoom=16&markers=#{@event.address.latitude}%2C#{@event.address.longitude}" %>
<br/>
<% end %>

<br/>
