<%= simple_form_for @tag, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend>Editer Tag</legend>

    <%= f.input :name, :label => "Nom du Tag" %>

    <div class="control-group">
      <%= f.label "Contexte", :class => 'control-label' %>
      <div class="controls">
        <%= f.select :context, options_for_select( Tag::CONTEXTS.map { |r| [I18n.translate( r.to_s), r] } 
 ) , :class => 'text_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary', :value => "Sauver" %>
      <%= link_to 'Annuler', tags_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
