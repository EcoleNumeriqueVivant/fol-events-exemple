<%= form_for @tag, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Tag</legend>

    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label "Contexte", :class => 'control-label' %>
      <div class="controls">
        <%= f.select :context, options_for_select( Tag::CONTEXTS.map { |r| [I18n.translate( r.to_s), r] } 
 ) , :class => 'text_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', tags_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
