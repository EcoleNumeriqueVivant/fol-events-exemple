<h1>Tag</h1>

<p>
  <b>Nom</b><br>
  <%= @tag.name %>
</p>

<p>
  <b>Contexte</b><br>
  <%= I18n.translate(  @tag.context ) %>
</p>

<% if @events.count > 0 %>
<h2>Les évènements liés : </h2>
<p> - 
   <% @events.each do |event| %>
     <%= link_to event.name, event_path(event) %> -
   <% end %>
</p>
<% end %>

<div class="form-actions">
  <%= link_to 'Back', tags_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_tag_path(@tag), :class => 'btn' %>
  <%= link_to 'Delete', tag_path(@tag), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
